pipeline {
    agent any
    parameters {
            string(name: 'workflow', defaultValue: '', description: 'workflow')
        }
    stages {
        stage('Build') {
            steps {
                echo "cleaned 1"
                powershell "mvn clean compile"
                echo "cleaned 2"
            }
        }

        stage('Test') {
            steps {
             script {
                echo 'Running tests...'
                def tasks = params.workflow.split(',')
                tasks.each { task ->
                                        // Dynamically create a stage for each task
                                        stage("process-${task}") {
                                            steps {
                                            echo "new stage {$task}"
                                            powershell "mvn test -Dsurefire.suiteXmlFiles=${task}"
                                            }
                                            }
                                            }

            }
            }
        }
    }
}
